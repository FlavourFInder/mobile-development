<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FlavorFinder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorAccent">@color/orange500</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey500</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:navigationBarColor">@color/green</item>

    </style>

    <style name="Theme.FlavorFinder" parent="Base.Theme.FlavorFinder" />

    <style name="Base.Widget.Material3.ExtendedFloatingActionButton.Icon." parent="Base.Theme.FlavorFinder">
        <item name="android:tint">?attr/colorAccent</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Base.Widget.Material3.SearchBar.Outlined" parent="Base.Theme.FlavorFinder">
        <item name="strokeColor">@color/green</item>
    </style>
</resources>
